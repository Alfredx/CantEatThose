<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChooseActivity" >

    <TextView
        android:id="@+id/text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_cantfind"
        android:layout_alignRight="@+id/button_cantfind"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="14dp"
        android:text="" />

    <com.tjerkw.slideexpandable.library.ActionSlideExpandableListView
        android:id="@+id/actionSlideExpandableListView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_submit" >

    </com.tjerkw.slideexpandable.library.ActionSlideExpandableListView>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_cantfind"
        android:layout_alignBottom="@+id/button_cantfind"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/button_cantfind"
        android:minWidth="100dp"
        android:text="@string/submit" />

    <Button
        android:id="@+id/button_cantfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/actionSlideExpandableListView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="31dp"
        android:text="@string/cantfind" />

</RelativeLayout>